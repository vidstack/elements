{
  "name": "@vidstack/elements",
  "version": "0.0.0-semantically-released",
  "description": "Spec-compliant, customizable, extensible, accessible and universal media elements.",
  "license": "MIT",
  "engines": {
    "node": ">=14.16.0"
  },
  "main": "dist-prod/index.js",
  "module": "dist-prod/index.js",
  "types": "./index.d.ts",
  "files": [
    "dist/",
    "dist-prod/",
    "index.d.ts",
    "custom-elements.json"
  ],
  "sideEffects": [
    "src/**/define.ts",
    "dist/**/define.js",
    "dist-prod/**/define.js"
  ],
  "exports": {
    ".": {
      "development": "./dist/index.js",
      "default": "./dist-prod/index.js"
    },
    "./*": {
      "development": "./dist/*",
      "default": "./dist-prod/*"
    },
    "./custom-elements.json": "./custom-elements.json"
  },
  "typesVersions": {
    "*": {
      "base/*": [
        "dist/base/*"
      ],
      "media/*": [
        "dist/media/*"
      ],
      "players/*": [
        "dist/players/*"
      ],
      "providers/*": [
        "dist/providers/*"
      ],
      "skins/*": [
        "dist/skins/*"
      ],
      "ui/*": [
        "dist/ui/*"
      ],
      "utils/*": [
        "dist/utils/*"
      ],
      "*": [
        "dist/*"
      ]
    }
  },
  "contributors": [
    "Dave Furfero <furf@furf.com>",
    "Rahim Alwer <rahim.alwer@gmail.com>",
    "Sam Potts <sam@potts.es>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vidstack/vds-elements.git"
  },
  "bugs": {
    "url": "https://github.com/vidstack/vds-elements/issues"
  },
  "scripts": {
    "analyze": "cem analyze --litelement --globs \"src/**/*Element.ts\"",
    "build": "npm run build:clean && tsc -p tsconfig-build.json",
    "build:clean": "rimraf dist dist-prod",
    "build:watch": "npm run build -- --incremental --watch",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build:prod:size": "cross-env CHECK_SIZE=true npm run build:prod",
    "build:prod:watch": "npm run build:prod -- -w",
    "build:release": "npm run build -- --sourceMap false --declarationMap false && npm run build:prod",
    "clean": "run-s build:clean",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .ts . --ignore-path .gitignore",
    "lint:prettier": "prettier . --check --ignore-path .gitignore --loglevel warn",
    "format": "run-s format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "prepare": "husky install",
    "size": "size-limit",
    "start": "npm run storybook",
    "storybook": "start-storybook -s .storybook/public",
    "storybook:build": "build-storybook -s .storybook/public",
    "test": "wtr \"src/**/*.test.ts\" --config wtr.config.mjs",
    "test:coverage": "npm run test:coverage:prepare && npm run test -- --coverage",
    "test:coverage:prepare": "node .scripts/no-dev-mode-in-coverage.mjs",
    "test:watch": "npm run test -- --watch",
    "release": "npx semantic-release"
  },
  "dependencies": {
    "@types/fscreen": "^1.0.1",
    "@types/hls.js": "^0.13.3",
    "fscreen": "^1.2.0",
    "just-debounce-it": "^1.5.0",
    "just-throttle": "^2.3.1"
  },
  "peerDependencies": {
    "lit": "^2.0.0-rc.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@custom-elements-manifest/analyzer": "^0.4.1",
    "@open-wc/semantic-dom-diff": "^0.19.4",
    "@open-wc/testing": "^3.0.0-next.1",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@size-limit/preset-small-lib": "^5.0.2",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/builder-webpack5": "^6.3.6",
    "@storybook/manager-webpack5": "^6.3.6",
    "@storybook/web-components": "^6.3.6",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.0.1",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.24.0",
    "@web/dev-server": "^0.1.8",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/dev-server-rollup": "^0.3.8",
    "@web/test-runner": "^0.13.12",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.13.15",
    "esbuild-loader": "^2.13.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-wc": "^1.2.0",
    "fast-glob": "^3.2.7",
    "hls.js": "^0.14.17",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "lit": "^2.0.0-rc.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^17.3.7",
    "sinon": "^11.1.1",
    "size-limit": "^5.0.2",
    "tslib": "^2.3.0",
    "typescript": "^4.4.1-rc",
    "webpack": "5.47.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "useTabs": false,
    "tabWidth": 2
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "npm run test:coverage:prepare"
    ],
    "*.{ts,md,json}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      {
        "name": "release",
        "channel": false
      },
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "keywords": [
    "accessible",
    "audio",
    "customizable",
    "dailymotion",
    "dash",
    "element",
    "elements",
    "extensible",
    "file",
    "framework-agnostic",
    "hls",
    "html5",
    "lit-element",
    "lit",
    "media",
    "plyr",
    "player",
    "react",
    "spec-compliant",
    "universal",
    "vds",
    "video",
    "vidstack",
    "vime",
    "vimeo",
    "web-component",
    "universal",
    "youtube"
  ],
  "customElements": "custom-elements.json"
}
