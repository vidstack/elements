{
  "name": "@vidstack/elements",
  "version": "0.1.2",
  "description": "Spec-compliant, customizable, extensible, accessible and universal media elements.",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=14.16.0"
  },
  "main": "dist-prod/index.js",
  "module": "dist-prod/index.js",
  "files": [
    "src/",
    "dist/",
    "dist-prod/",
    "define/",
    "types/",
    "index.d.ts",
    "global.d.ts"
  ],
  "sideEffects": [
    "define/*",
    "src/define/*",
    "dist/define/*",
    "dist-prod/define/*"
  ],
  "exports": {
    ".": {
      "development": "./dist/index.js",
      "default": "./dist-prod/index.js"
    },
    "./define/*": {
      "development": "./dist/define/*",
      "default": "./dist-prod/define/*"
    }
  },
  "contributors": [
    "Dave Furfero <furf@furf.com>",
    "Rahim Alwer <rahim.alwer@gmail.com>",
    "Sam Potts <sam@potts.es>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vidstack/elements.git"
  },
  "bugs": {
    "url": "https://github.com/vidstack/elements/issues"
  },
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.js",
    "build:prod": "rimraf dist-prod && cross-env NODE_ENV=production rollup -c rollup.config.js",
    "build:watch": "run-p \"build -- -w\" \"build:types -- -w\" \"build:definitions -- -w\"",
    "build:types": "rimraf types && tsc -p tsconfig-build.json",
    "build:definitions": "rimraf define && node .scripts/definitions.mjs",
    "build:all": "run-p build build:prod && run-s build:types build:definitions",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "rimraf define dist dist-prod types",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .ts . --ignore-path .gitignore",
    "lint:prettier": "prettier . --check --ignore-path .gitignore --loglevel warn",
    "format": "run-s format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "minify:prod": "node .scripts/minify.mjs",
    "prepare": "husky install",
    "test": "",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "release": "node .scripts/release.mjs"
  },
  "dependencies": {
    "@types/fscreen": "^1.0.1",
    "@types/hls.js": "^0.13.3",
    "fscreen": "^1.2.0",
    "just-debounce-it": "^1.5.0",
    "just-throttle": "^2.3.1",
    "lit": "^2.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@types/node": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.24.0",
    "chokidar": "^3.5.2",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "esbuild": "^0.14.9",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-wc": "^1.2.0",
    "execa": "^6.0.0",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "hls.js": "^0.14.17",
    "husky": "^7.0.0",
    "kleur": "^4.1.4",
    "lint-staged": "^11.0.0",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.62.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "semver": "^7.3.5",
    "terser": "^5.10.0",
    "tslib": "^2.3.0",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "useTabs": false,
    "tabWidth": 2
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,md,json}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "accessible",
    "audio",
    "customizable",
    "dailymotion",
    "dash",
    "element",
    "elements",
    "extensible",
    "file",
    "framework-agnostic",
    "hls",
    "html5",
    "lit",
    "media",
    "plyr",
    "player",
    "react",
    "spec-compliant",
    "universal",
    "vds",
    "video",
    "vidstack",
    "vime",
    "vimeo",
    "web-component",
    "universal",
    "youtube"
  ],
  "volta": {
    "node": "14.18.2"
  }
}
