{
  "name": "@vidstack/player",
  "version": "0.0.0",
  "description": "Customizable, extensible, accessible and universal media player.",
  "license": "MIT",
  "engines": {
    "node": ">=12.12.0"
  },
  "main": "bundle/index.js",
  "module": "bundle/index.js",
  "files": [
    "bundle/",
    "core/",
    "providers/",
    "shared/",
    "skins/",
    "ui/",
    "utils/",
    "custom-elements.json"
  ],
  "sideEffects": [
    "**/vds-*.ts",
    "bundle/elements.js"
  ],
  "contributors": [
    "Dave Furfero <furf@furf.com>",
    "Rahim Alwer <rahim.alwer@gmail.com>",
    "Sam Potts <sam@potts.es>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vidstack/player.git"
  },
  "bugs": {
    "url": "https://github.com/vidstack/player/issues"
  },
  "scripts": {
    "build": "run-s clean build:esm",
    "build:esm": "tsc -p tsconfig-build.json",
    "build:watch": "npm run build:esm -- -w",
    "clean": "rimraf bundle core providers skins ui utils shared",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .ts --quiet . --ignore-path .gitignore",
    "lint:prettier": "prettier . --check --ignore-path .gitignore --loglevel warn",
    "format": "run-s format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "release": "npx semantic-release",
    "test": "wtr \"src/**/*.test.ts\"",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "storybook": "wds -c .storybook/server.mjs",
    "storybook:build": "build-storybook"
  },
  "dependencies": {
    "@lukeed/uuid": "^2.0.0",
    "@wcom/context": "^2.0.0",
    "@wcom/events": "^1.0.0",
    "clsx": "^1.1.1",
    "lit-element": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@open-wc/testing": "^2.5.32",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/web-components": "^6.1.15",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "@web/dev-server": "^0.1.8",
    "@web/dev-server-esbuild": "^0.2.6",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.9.7",
    "@web/test-runner-commands": "^0.2.1",
    "babel-loader": "^8.2.2",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "lit-analyzer": "^1.2.1",
    "lit-html": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.7",
    "sinon": "^9.2.1",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md,json}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      {
        "name": "release"
      },
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "keywords": [
    "vidstack",
    "player",
    "plyr",
    "vime",
    "youtube",
    "vimeo",
    "dailymotion",
    "hls",
    "dash",
    "file",
    "html5",
    "video",
    "audio",
    "react",
    "customizable",
    "extensible",
    "accessible",
    "universal",
    "lit",
    "lit-element",
    "web components",
    "framework agnostic"
  ]
}
