{
  "name": "@vidstack/elements",
  "version": "0.0.0-semantically-released",
  "description": "Spec-compliant, customizable, extensible, accessible and universal media elements.",
  "license": "MIT",
  "engines": {
    "node": ">=14.16.0"
  },
  "main": "bundle/index.js",
  "module": "bundle/index.js",
  "types": "bundle/index.d.ts",
  "files": [
    "bundle/",
    "core/",
    "providers/",
    "shared/",
    "skins/",
    "ui/",
    "utils/",
    "custom-elements.json",
    "vscode.html-data.json"
  ],
  "sideEffects": [
    "**/vds-*.js",
    "bundle/define.js"
  ],
  "contributors": [
    "Dave Furfero <furf@furf.com>",
    "Rahim Alwer <rahim.alwer@gmail.com>",
    "Sam Potts <sam@potts.es>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vidstack/vds-elements.git"
  },
  "bugs": {
    "url": "https://github.com/vidstack/vds-elements/issues"
  },
  "scripts": {
    "build": "run-s clean build:esm",
    "build:esm": "tsc -p tsconfig-build.json",
    "build:watch": "npm run build:esm -- -w",
    "build:esbuild": "node .scripts/esbuild -o build -t tsconfig-build.json",
    "build:storybook": "node .scripts/esbuild -o storybook-build -t tsconfig-storybook.json",
    "clean": "run-p clean:*",
    "clean:build": "rimraf bundle core providers skins ui utils shared",
    "clean:storybook": "rimraf storybook-build storybook-static",
    "clean:test": "rimraf coverage",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .ts --quiet . --ignore-path .gitignore",
    "lint:prettier": "prettier . --check --ignore-path .gitignore --loglevel warn",
    "format": "run-s format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "prepare": "husky install && npm run transform",
    "start": "npm run storybook",
    "storybook": "npm run storybook:prepare && run-p \"build:storybook -- -w\" storybook:serve",
    "storybook:prepare": "run-s clean:storybook build:storybook",
    "storybook:build": "build-storybook -s .storybook/public",
    "storybook:serve": "start-storybook -s .storybook/public",
    "storybook:static": "run-s storybook:prepare storybook:build",
    "test": "wtr \"src/**/*.test.ts\"",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "transform": "wcom transform \"src/**/*.ts\"",
    "release": "npx semantic-release"
  },
  "dependencies": {
    "@types/fscreen": "^1.0.1",
    "@types/hls.js": "^0.13.3",
    "@wcom/context": "^2.7.0",
    "clsx": "^1.1.1",
    "fscreen": "^1.2.0",
    "lit-element": "^2.0.0",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@open-wc/semantic-dom-diff": "^0.19.4",
    "@open-wc/testing": "^2.5.32",
    "@storybook/addon-a11y": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/builder-webpack5": "^6.2.8",
    "@storybook/web-components": "^6.2.8",
    "@types/estree": "^0.0.47",
    "@types/mocha": "^8.0.3",
    "@types/prettier": "^2.2.3",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.21.0",
    "@wcom/cli": "^3.3.0",
    "@web/dev-server": "^0.1.8",
    "@web/dev-server-esbuild": "^0.2.6",
    "@web/test-runner": "^0.13.5",
    "esbuild": "^0.11.0",
    "esbuild-loader": "^2.11.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-wc": "^1.2.0",
    "fast-glob": "^3.2.5",
    "hls.js": "^0.14.17",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.3",
    "lit-html": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.7",
    "sinon": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md,json}": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      {
        "name": "release",
        "channel": false
      },
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "keywords": [
    "accessible",
    "audio",
    "customizable",
    "dailymotion",
    "dash",
    "element",
    "elements",
    "extensible",
    "file",
    "framework-agnostic",
    "hls",
    "html5",
    "lit-element",
    "lit",
    "media",
    "plyr",
    "player",
    "react",
    "spec-compliant",
    "universal",
    "video",
    "vidstack",
    "vime",
    "vimeo",
    "web-component",
    "universal",
    "youtube"
  ],
  "customElementsManifest": "custom-elements.json"
}
