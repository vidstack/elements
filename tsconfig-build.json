{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "preserveWatchOutput": true,
    "noEmit": false,
    "importHelpers": true,
    "incremental": false,
    "sourceMap": true,
    "useDefineForClassFields": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test*.js", "src/**/*.test*.ts", "src/media/test-utils"]
}
